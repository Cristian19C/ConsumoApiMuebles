
<title><%=title%></title>

<%- include("./template/cabecera.ejs") %>


<% let lastId = 0 %>
<%
    data.forEach((item) => {
      if (item.id_product > lastId) {
        lastId = Number(item.id_product);
      }
    }); %>
    <br><br><br><br>
<div class="formulario__agregar">
    <div class="formulario__title">Datos del material</div>
    <form method="POST" action="/add" enctype="multipart/form-data">
        <label for="id_product">ID:</label> 
        <input type="number" required readonly name="id_product" id="id_product" placeholder="ID" value="<%= lastId+1 %>">
        <label for="name">Nombre:</label> 
        <input type="text" required name="name"  id="name" placeholder="Nombre del material">
        <label for="price">Precio:</label> 
        <input type="number" required name="price"  id="price" placeholder="Precio del material">
        <label for="text">Descripcion:</label> 
        <input type="text" required name="description"  id="number" placeholder="Cantidad del material">
        <label for="description">categoria:</label>
        <select required name="category" id="description" class="list">
            <option class="list-option" value="sofas">Sofas</option>
            <option class="list-option" value="muebles">Muebles</option>
            <option class="list-option" value="sillas">Sillas</option>
        </select>

        <label for="brand">imagen:</label> 
        <input type="file" required name="brand"  id="brand" name="image">
        

        <div class="container__buttons">

            <button type="submit" class="button button--success">Agregar</button>
    
            <button type="submit" name="accion" value="Cancelar" class="button button--info"><a href="/admin" class="button--a">Cancelar</a></button>
        </div>
    </form>
</div>

<script src="./js/menu.js"></script>
<script src="js/bootstrap.min.js"></script>
</body>
</html>